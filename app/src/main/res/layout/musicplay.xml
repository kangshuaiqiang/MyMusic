<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/musicplay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/singgeriamge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/person" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/musicName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="musicNamse"
            android:textColor="#272727"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/singger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Sinnger"
            android:textColor="#a5a5a5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/suspend"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_play_bar_btn_play" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_play_bar_btn_next" />
    </LinearLayout>

</LinearLayout>